<h2 class="text-center"><strong>Sign up</strong></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="row">
      <div class="col-xs-12 col-md-4">
        <div class="field form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, class: "form-control input" %>
        </div>
      </div>

      <div class="col-xs-12 col-md-4">
        <div class="field form-group">
          <%= f.label :mi %><br />
          <%= f.text_field :mi, autofocus: true, class: "form-control input" %>
        </div>

      </div>
      <div class="col-xs-12 col-md-4">
        <div class="field form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, class: "form-control input" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control  input" %>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div class="field form-group">
          <%= f.label :phone %><br />
          <%= f.text_field :phone, autofocus: true, class: "form-control  input" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="field form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control input" %>
        </div>
      </div>

      <div class="col-xs-12 col-md-6">
        <div class="field form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="field form-group">
          <%= f.label :address1 %><br />
          <%= f.text_field :address1, autofocus: true, class: "form-control input" %>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div class="field form-group">
          <%= f.label :address2 %><br />
          <%= f.text_field :address2, autofocus: true, class: "form-control input" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-md-4">
        <div class="field form-group">
          <%= f.label :zip %><br />
          <%= f.text_field :zip, autofocus: true, class: "form-control input" %>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="field form-group">
          <%= f.label :city %><br />
          <%= f.text_field :city, autofocus: true, class: "form-control input" %>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="field form-group">
          <%= f.label :country %><br />
          <%= f.text_field :country, autofocus: true, class: "form-control input" %>
        </div>
      </div>
    </div>
    <% f.text_field :family_id, :as => :hidden, :input_html => { :value => 0 } %>
  <div class="actions form-group">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
